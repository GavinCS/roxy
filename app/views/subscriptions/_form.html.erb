<%= form_for @subscriber , :url => subscribe_path ,:html => { :class => 'form-horizontal'}  do |s| %>
  <% if @subscriber.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@subscriber.errors.count, "error") %> prohibited this subscriber from being saved:</h2>

      <ul>
      <% @subscriber.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row-fluid">
    <div class="span6">
      <div class="control-group">
          <div class="controls">
               <%= s.text_field :firstname , :class => 'input-xlarge', :id => 'formfield' ,:placeholder => 'Please enter your Firstname'%>
          </div>    
          <div class="controls">
               <%= s.text_field :lastname , :class => 'input-xlarge', :id => 'formfield' ,:placeholder => 'Please enter your Surname'%>
          </div>
      </div>
    </div>
    <div class="span6" >
      <div class="control-group">
          <div class="controls">
           <%= s.text_field :email , :class => 'input-xlarge', :id => 'formfield' ,:placeholder => 'Please enter your email address'%>
           <%= s.hidden_field :source, :value => 'clearancestore'  %>
          </div>
      </div>
      <div class="control-group">
          <div class="controls">
           <%= s.text_field :mobile , :class => 'input-xlarge', :id => 'formfield' ,:placeholder => 'Please enter your mobile number'%>
         
          </div>
      </div>
      </div>
  
      </div><!-- END FLUID ROW -->

      <div class="row-fluid">
      <div class="span6" >
      <div class="control-group radio">

        <div class="controls" style="margin-bottom:10px;">
          <label class="checkbox">
            <input class="rtext" type="checkbox" id="optionsCheckbox" name="clearance_page[gender]" value="2" >
            Women's Newsletter

          </label>
        </div>

        <div class="controls" style="margin-top:10px;">
          <label class="checkbox">
            <input type="checkbox" class="rtext" id="optionsCheckbox" name="clearance_page[gender]" value="1">
            Men's Newsletter
          </label>
        </div>
      </div>
      </div>

      <div class="span6" >
    <div class="actions">
    <%= s.submit :value => 'Sign Up', :id => 'submit' %>
  </div>
</div>
</div> <!-- END FLUID ROW -->

  
<% end %>
